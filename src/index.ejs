<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= conf.username %> ‚Ä¢ Portfolio</title>
    <link rel="icon" type="image/svg+xml" href="./logo.svg">
    <link rel="stylesheet" href="./stylesheet/style.css">
    <% if (conf.themes && conf.theme && conf.themes[conf.theme]) { %>
    <style>
        :root {
            --primary: <%= conf.themes[conf.theme].primary %>;
            --secondary: <%= conf.themes[conf.theme].secondary %>;
            --tertiary: <%= conf.themes[conf.theme].tertiary %>;
        }
    </style>
    <% } %>
</head>

<body data-mode="dark" data-theme="<%= conf.theme %>" data-themes='<%- JSON.stringify(conf.themes) %>'>
    <div class="theme-switcher">
        <button class="theme-toggle" title="Toggle dark/light mode" id="modeToggle">
            <span class="toggle-icon">üåô</span>
        </button>
    </div>

    <nav class="navbar">
        <div class="nav-wrapper">
            <div class="logo">
                <span class="logo-text"><%= conf.username %></span>
            </div>
            <ul class="nav-menu">
                <li><a href="#home" class="nav-link active">Home</a></li>
                <li><a href="#skills" class="nav-link">Skills</a></li>
                <li><a href="#projects" class="nav-link">Projects</a></li>
                <li><a href="#music" class="nav-link">Music</a></li>
                <li><a href="#technologies" class="nav-link">Technologies</a></li>
                <li><a href="#services" class="nav-link">Services</a></li>
                <li><a href="#contact" class="nav-link">Contact</a></li>
                <li><a href="#smedia" class="nav-link">Social Media</a></li>
            </ul>
        </div>
    </nav>

    <section id="home" class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <div class="hero-prefix">Welcome to my portfolio</div>
                <h1 class="hero-title">I'm <span class="highlight"><%= conf.username %></span></h1>
                <h2 class="hero-subtitle"><%= conf.title %></h2>
                <p class="hero-desc"><%= conf.bio %></p>
                <div class="hero-actions">
                    <% (conf.socials || []).forEach(s => { %>
                        <a href="<%= s.link %>" target="_blank" class="btn btn-primary"><%= s.name %></a>
                    <% }) %>
                </div>
            </div>
            <div class="hero-visual">
                <img src="https://lanyard.cnrad.dev/api/<%= conf.discord_id %>" alt="Discord Status" class="hero-image">
            </div>
        </div>
    </section>

    <section id="skills" class="skills-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">My Skills</h2>
                <div class="section-underline"></div>
            </div>
            <div class="skills-grid">
                <% (conf.skills || []).forEach((skill, index) => { %>
                    <div class="skill-card" style="--skill-index: <%= index %>">
                        <div class="skill-emoji"><%= skill.emoji || '‚≠ê' %></div>
                        <div class="skill-name"><%= skill.name || skill %></div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section id="projects" class="projects-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Featured Projects</h2>
                <div class="section-underline"></div>
            </div>
            <div class="projects-grid">
                <% (conf.projects || []).forEach((p, index) => { %>
                    <div class="project-card" style="--project-index: <%= index %>">
                        <div class="project-header">
                            <div class="project-number">0<%= index + 1 %></div>
                            <h3 class="project-title"><a href="<%= p.link %>" target="_blank"><%= p.name %></a></h3>
                        </div>
                        <p class="project-desc"><%= p.desc %></p>
                        <% if (p.details) { %>
                            <p class="project-details"><%= p.details %></p>
                        <% } %>
                        <a href="<%= p.link %>" target="_blank" class="btn btn-secondary">Explore</a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section id="music" class="music-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Music History</h2>
                <div class="section-underline"></div>
            </div>
            <div id="music-tracks" class="music-tracks">
                <div class="music-loading">Loading your music...</div>
            </div>
        </div>
    </section>

    <section id="technologies" class="technologies-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Technologies I Use</h2>
                <div class="section-underline"></div>
            </div>
            <div class="tech-grid">
                <% if (conf.technologies) { Object.keys(conf.technologies).forEach(function(cat){ %>
                    <div class="tech-category">
                        <h3 class="tech-category-title"><%= cat %></h3>
                        <div class="tech-items">
                            <% conf.technologies[cat].forEach(tech => { %>
                                <span class="tech-badge"><%= tech %></span>
                            <% }) %>
                        </div>
                    </div>
                <% }) } %>
            </div>
        </div>
    </section>

    <section id="services" class="support-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Services</h2>
                <div class="section-underline"></div>
            </div>
            <div class="support-grid">
                <% (conf.services || []).forEach((service, index) => { %>
                    <div class="support-card" style="--support-index: <%= index %>">
                        <div class="support-icon"><%= service.icon %></div>
                        <h3><%= service.title %></h3>
                        <p><%= service.description %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section id="contact" class="contact-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Contact</h2>
                <div class="section-underline"></div>
            </div>
            <div class="contact-grid">
                <% (conf.contacts || []).forEach((contact, index) => { %>
                    <a href="<%= contact.link %>" class="contact-card" style="--contact-index: <%= index %>">
                        <div class="contact-icon"><%= contact.icon %></div>
                        <div class="contact-info">
                            <div class="contact-label"><%= contact.label %></div>
                            <div class="contact-value"><%= contact.value %></div>
                        </div>
                    </a>
                <% }) %>
            </div>
        </div>
    </section>

    <section id="smedia" class="links-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Social Media</h2>
                <div class="section-underline"></div>
            </div>
            <div class="social-links-container">
                <% (conf.socalMedia || []).forEach((s, index) => { %>
                    <a href="<%= s.link %>" target="_blank" class="social-card" style="--social-index: <%= index %>">
